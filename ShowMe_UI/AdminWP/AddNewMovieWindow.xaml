<Window x:Class="ShowMe_UI.AddNewMovieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShowMe_UI"
        mc:Ignorable="d"
        Title="AddNewMovieWindow" Height="300" Width="300">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <Grid  Name="gridAddNewShow" Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Image Margin="5,0" Grid.RowSpan="3"/>

            <TextBlock Margin="7" Grid.Column="1">Name</TextBlock>
            <TextBox x:Name="textboxAddNewMovieName" Margin="5" Grid.Column="2" >

            </TextBox>
            <TextBlock   Margin="7" Grid.Row="1" Grid.Column="1">Year</TextBlock>
            <TextBox x:Name="textboxAddNewMovieYear" Margin="5" Grid.Row="1" Grid.Column="2">
            </TextBox>
            <TextBlock Margin="7" Grid.Row="2" Grid.Column="1">Rating</TextBlock>
            <TextBox x:Name="textboxAddNewMovieRating"  Margin="5" Grid.Row="2" Grid.Column="2" ></TextBox>

            <TextBlock Margin="7" Grid.Row="3" Grid.Column="1">Genre</TextBlock>
            <TextBox x:Name="textboxAddNewMovieGenre"  Margin="5" Grid.Row="3" Grid.Column="2" ></TextBox>


            <TextBlock Margin="7,7,7,0" Grid.Row="3">Description</TextBlock>
            <TextBox x:Name="textboxAddNewMovieDesc" Margin="7" Grid.Row="4" Grid.ColumnSpan="3"
                                     VerticalScrollBarVisibility="Visible" TextWrapping="Wrap"/>
        </Grid>
        <StackPanel Grid.Row="1" HorizontalAlignment="Right" Orientation="Horizontal" >
            <Button x:Name="okButton" Margin="2,0,2,2"  Padding="2" Content="Ok" Height="23"  Click="buttonAddNewMovie_Click" />
            <Button x:Name="cancel" Margin="2,0,2,2"  Padding="2" Content="Cancel" Click="cancel_Click" />
        </StackPanel>

    </Grid>
    
</Window>
